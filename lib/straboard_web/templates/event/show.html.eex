<section class="phx-hero">
  <h1><%= @event.name %></h1>
  <p>
    From <em><%= @event.start_date %></em> to <em><%= @event.end_date %></em>
  </p>
</section>

<section>
  <table class="text-center">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Team</th>
        <th>Distance â–¾</th>
        <th>Activities</th>
        <th>Avg. speed</th>
      </tr>
    </thead>
    <tbody>
      <%= for {team, i} <- Enum.with_index(@teams) do %>
        <tr>
          <td class="<%= if team.name == @team_name, do: "hightlight" %>">
            <%= i+1 %>
          </td>
          <td>
            <strong><%= team.name %></strong><br />
            <a href="<%= Routes.team_path(@conn, :show, team.id) %>">
              <%= team.member_count %> member<%= if team.member_count >= 2, do: "s" %>
            </a>
          </td>
          <td><%= (team.total_distance / 1_000) |> Float.round(1) %> km</td>
          <td><%= team.activity_count %></td>
          <td>
            <%= if team.average_speed > 0 do %>
              <%= if @event.type == "Run" do %>
                <%= 1_000_000 / team.average_speed
                    |> trunc()
                    |> Timex.Duration.from_milliseconds()
                    |> Timex.Duration.to_time!()
                    |> Timex.Format.DateTime.Formatter.format!("%M:%S", :strftime) %> /km
              <% else %>
                <%= team.average_speed |> Float.round(1) %> m/s<br />
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />
</section>

<section class="text-center">
  <%= if @team_name == "" do %>
    <%= link "Join this event", to: Routes.event_path(@conn, :page_join, @event.id), class: "button" %>
  <% end %>
</section>

<section>
  <%= if @current_user_id != nil do %>
    <hr />
    <section>
      <%= link "< My events", to: Routes.event_path(@conn, :index) %>

      <%= if @team_name != "" do %>
        <%= link "Switch team >", to: Routes.event_path(@conn, :page_join, @event.id), class: "float-right" %>
      <% end %>

      <%= if @current_user_id == @event.user_id do %>
        <div class="clearfix">
          <%= link "Edit event >", to: Routes.event_path(@conn, :page_update, @event.id), class: "float-right" %>
        </div>
      <% end %>

    </section>
  <% end %>
</section>
